  <% if current_user.faving?(micropost) %>
    <%= form_for(current_user.favorites.find_by(fav_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :fav_id, micropost.id %>
      <%= f.submit 'Unfav', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :fav_id, micropost.id %>
      <%= f.submit 'Fav', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
